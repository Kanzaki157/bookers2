<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
      <table class="table">
        <tbody><tr></tr>
          <tr>
	          <th>name</th>
	          <th><%= @user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
        </table>
        
        <div class="row">
          <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        
        <h2 class="mt-3">New book</h2>
            <%= form_with model: @booknew, method: :post do |f| %>
              <h4>Title</h4>
                <%= f.text_field :title %>
              <h4>Opinion</h4>
                <%= f.text_area :body %>
              <%= f.submit 'Create Book' %>
            <% end %>
          </div>
            <div class="col-md-8 offset-md-1">
          		<h2>Book detail</h2>
          		  <table class="table">
          		    <tbody>
          		      <tr>
                      <td><%= link_to user_path(@book.user.id) do %>
                          <%= image_tag 'no_image.jpg' %>
                          <br>
                          <%= link_to @book.user.name, user_path(@book.user.id) %>
                          <% end %>
                      </td>
                          <td><%= link_to @book.title %></td>
                          <td><%= @book.body %></td>
                            <% if @book.user == current_user %>
                          <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-success" %></td>
                          <td><%= link_to "Destroy", book_path(@book),class:"btn btn-danger",  method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
                          <% end %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>